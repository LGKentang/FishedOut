package factory;

import java.util.UUID;

public class RodFactory {

    public Rod createRod(String name, String rarity, double price) {
        String id = UUID.randomUUID().toString();
        return new Rod(id, name, rarity, price);
    }

    public Rod createDefaultRod() {
        return new Rod("1", "Fishing Rod", "Common", 50);
    }
}
